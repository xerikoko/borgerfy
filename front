<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Burger Overlay</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin: 20px; }
        input { margin: 10px; }
        img { max-width: 100%; margin-top: 10px; }
    </style>
</head>
<body>
    <h2>Upload an Image to Add Burgers</h2>
    <input type="file" id="imageInput" accept="image/*">
    <button onclick="uploadImage()">Upload</button>
    <br>
    <img id="outputImage" style="display: none;" />

    <script>
        async function uploadImage() {
            const fileInput = document.getElementById('imageInput');
            if (!fileInput.files.length) {
                alert('Please select an image.');
                return;
            }

            const formData = new FormData();
            formData.append('image', fileInput.files[0]);

            try {
                const response = await fetch('https://your-render-api-url.com/upload', {
                    method: 'POST',
                    body: formData
                });
                if (!response.ok) throw new Error('Failed to process image');

                const blob = await response.blob();
                const imageUrl = URL.createObjectURL(blob);
                document.getElementById('outputImage').src = imageUrl;
                document.getElementById('outputImage').style.display = 'block';
            } catch (error) {
                alert('Error processing image: ' + error.message);
            }
        }
    </script>
</body>
</html>
